<body class="" style="color: #13C1AC !important;">
    <%- include("./partials/navbar")%>
        <div class="container mt-5">
            <div class="row">
                <div class="col"></div>
                <div class="col-md-4 col-lg-5">
                    <h1>Información de tu producto</h1>
                    <form class="col-mb-4 col-lg-8 needs-validation" action="/" method="POST" novalidate>
                        <div class="col-mb-4">
                            <label for="nombre" class="form-label mb-4">¿Qué estás vendiendo?</label>
                            <div class="mb-3">
                                <input type="text" class="form-control" id="nombre" name="nombre" required>
                                <div class="valid-feedback">
                                    ¡Muy bien!
                                </div>
                                <div class="invalid-feedback">
                                    ¡Pon un nombre sencillo!
                                </div>
                            </div>
                        </div>
                        <div class="md-3 mt-3 mb-3">
                            <label class="form-label" for="foto">Image URL</label>
                            <input class="form-control" type="text" name="foto" id="foto" required>
                        </div>
                        <div class="input-group col has-validation mb-3">
                            <span class="input-group-text">€</span>
                            <input id="precio" type="text" class="form-control "
                                aria-label="Amount (to the nearest dollar)" name="precio" required>
                            <span class="input-group-text">.00</span>
                        </div>
                        <div class="col">
                            <select class="form-select mb-3" id="venta" name="venta" required>
                                <option selected disabled value="">>Quiero vender</option>
                                <option value="true">>Quiero vender</option>
                                <option value="false">>Quiero comprar</option>
                            </select>
                        </div>
                        <div class="input-group mb-3 has-validation">
                            <span class="input-group-text" id="tag1">#</span>
                            <input type="text" class="form-control" placeholder="Hashtag"
                                aria-describedby="basic-addon1" name="tags" required>
                            <div class="invalid-feedback">
                                Por lo menos define un tag...
                            </div>
                        </div>
                        <div class="input-group mb-3">
                            <span class="input-group-text" id="tag2">#</span>
                            <input type="text" class="form-control" placeholder="Hashtag(opcional)"
                                aria-describedby="basic-addon1">
                        </div>
                        <div class="input-group mb-3">
                            <span class="input-group-text" id="tag2">#</span>
                            <input type="text" class="form-control" placeholder="Hashtag(opcional)"
                                aria-describedby="basic-addon1">
                        </div>
                        <div class="col-12">
                            <button class="btn btn-primary" type="submit">Submit form</button>
                        </div>
                    </form>
                </div>
                <div class="col"></div>
            </div>

        </div>

